<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="DATE_TIME_FORMAT_PATTERN">yyyy/MM/dd HH:mm:ss.SSS</Property>
        <Property name="APP_LOG_PATTERN">%d{${DATE_TIME_FORMAT_PATTERN}} %p [%X{mdc.request_id}] [%X{trace_id},%X{span_id}] [%t] [%c{1}] %m %throwable%n</Property>
    </Properties>
    <Appenders>
        <Console name="ConsoleApp" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${sys:APP_LOG_PATTERN}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleApp"/>
        </Root>
    </Loggers>
</Configuration>
